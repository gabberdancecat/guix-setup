# renoise fix bug
if [ -d "$HOME/.guix-extra-profiles/renoise/renoise/lib" ]; then
    export LD_LIBRARY_PATH="$HOME/.guix-extra-profiles/renoise/renoise/lib:$LD_LIBRARY_PATH"
fi

